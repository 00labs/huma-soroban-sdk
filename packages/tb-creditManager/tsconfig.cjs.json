{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist/cjs" /* Redirect output structure to the directory. */,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
