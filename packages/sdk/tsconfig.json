{
  "include": ["src/**/*"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@": ["./"],
      "*": ["src/*", "node_modules/*"],
      "@huma-shan/soroban-credit-manager": ["../tb-creditManager"],
      "@huma-shan/soroban-credit-storage": ["../tb-creditStorage"],
      "@huma-shan/soroban-huma-config": ["../tb-humaConfig"],
      "@huma-shan/soroban-pool": ["../tb-pool"],
      "@huma-shan/soroban-pool-credit": ["../tb-poolCredit"],
      "@huma-shan/soroban-pool-manager": ["../tb-poolManager"],
      "@huma-shan/soroban-pool-storage": ["../tb-poolStorage"],
      "@huma-shan/soroban-tranche-vault": ["../tb-trancheVault"],
      "@huma-shan/soroban-sep41": ["../tb-sep41"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../tb-creditManager"
    },
    {
      "path": "../tb-creditStorage"
    },
    {
      "path": "../tb-humaConfig"
    },
    {
      "path": "../tb-pool"
    },
    {
      "path": "../tb-poolCredit"
    },
    {
      "path": "../tb-poolManager"
    },
    {
      "path": "../tb-poolStorage"
    },
    {
      "path": "../tb-trancheVault"
    },
    {
      "path": "../tb-sep41"
    }
  ]
}
